@model RegistroDoc.Entities.Inventory

@{
    ViewData["Title"] = "Nuevo";
}

<h1>Adicionar nuevo</h1>

<h4>Documento</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label asp-for="Number" class="control-label"></label>
                    <input asp-for="Number" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>

                <div class="form-group col-md-5">
                    <label asp-for="ReferenceCode" class="control-label"></label>
                    <input asp-for="ReferenceCode" class="form-control" />
                    <span asp-validation-for="ReferenceCode" class="text-danger"></span>
                </div>

                <div class="form-group col-md-5">
                    <label asp-for="DocumentTitle" class="control-label"></label>
                    <input asp-for="DocumentTitle" class="form-control" />
                    <span asp-validation-for="DocumentTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="Series" class="control-label"></label>
                    <input asp-for="Series" class="form-control" />
                    <span asp-validation-for="Series" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="Volume" class="control-label"></label>
                    <input asp-for="Volume" class="form-control" />
                    <span asp-validation-for="Volume" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="SecondNumber" class="control-label"></label>
                    <input asp-for="SecondNumber" class="form-control" />
                    <span asp-validation-for="SecondNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="ExtremeDates" class="control-label"></label>
                    <input asp-for="ExtremeDates" class="form-control" />
                    <span asp-validation-for="ExtremeDates" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="InstallationUnit" class="control-label"></label>
                    <input asp-for="InstallationUnit" class="form-control" />
                    <span asp-validation-for="InstallationUnit" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="NumberSheets" class="control-label"></label>
                    <input asp-for="NumberSheets" class="form-control" />
                    <span asp-validation-for="NumberSheets" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ProducerName" class="control-label"></label>
                    <input asp-for="ProducerName" class="form-control" />
                    <span asp-validation-for="ProducerName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="StateConservation" class="control-label"></label>
                    <input asp-for="StateConservation" class="form-control" />
                    <span asp-validation-for="StateConservation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="DocumentObservation" class="control-label"></label>
                    <textarea rows="3" asp-for="DocumentObservation" class="form-control"></textarea>
                    <span asp-validation-for="DocumentObservation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Shelf" class="control-label"></label>
                    <input asp-for="Shelf" class="form-control" />
                    <span asp-validation-for="Shelf" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Bald" class="control-label"></label>
                    <input asp-for="Bald" class="form-control" />
                    <span asp-validation-for="Bald" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Box" class="control-label"></label>
                    <input asp-for="Box" class="form-control" />
                    <span asp-validation-for="Box" class="text-danger"></span>
                </div>
            </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

